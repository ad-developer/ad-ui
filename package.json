{
  "name": "ad-ui",
  "version": "1.0.0",
  "description": "simple javascript ui library",
  "author": "A.D. Software Labs",
  "license": "MIT",
  "scripts": {
    "clean": "del-cli dist/**",
    "build": "mkdirp dist && webpack --mode=development --progress --color",
    "build:min": "mkdirp dist && cross-env AD_ENV=production  webpack -p --mode=production --progress --color",
    "dist": "npm run clean && npm run build && npm run build:min",
    "dev": "npm run clean && cross-env AD_ENV=development webpack-dev-server --content-base demos --inline --hot --host 0.0.0.0",
    "fix:js": "eslint --fix packages webpack.config.js karma.conf.js",
    "fix:css": "stylefmt -r packages/**/*.scss",
    "fix": "npm-run-all --parallel fix:*",
    "lint:js": "eslint packages webpack.config.js karma.conf.js",
    "lint": "npm-run-all --parallel lint:*",
    "test:unit": "karma start --single-run",
    "pretest": "npm run lint",
    "test": "npm run test:unit"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.2.3",
    "babel-loader": "^8.2.2",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "dom-events": "^0.1.1",
    "eslint": "^7.17.0",
    "eslint-config-google": "^0.14.0",
    "glob": "^7.1.6",
    "karma": "^4.4.1",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^2.0.1",
    "karma-sauce-launcher": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-tap": "^4.0.0",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "^1.3.4",
    "mkdirp": "^1.0.4",
    "mocha": "^8.2.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.1.0",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylefmt": "^6.0.3",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.13.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "testdouble": "^3.16.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.2"
  }
}
